<h1>Sessions#home</h1>
<p>Find me in app/views/sessions/home.html.erb</p>

<% if signed_in? %>
  <h1>Welcome <%= link_to current_user.username, user_path(current_user) %>!</h1>
  <ul>
    <% if signed_in? %>
      <li><%= link_to "All Users", users_path %></li>
      <li><%= link_to "My Account", user_path(current_user) %></li>
      <li><%= link_to "All Submissions", submissions_path %></li>
      <li><%= link_to "My Submissions", user_submissions_path(current_user) %></li>
      <li><%= link_to "All Collections", collections_path %></li>
      <li><%= link_to "My Collections", user_collections_path(current_user) %></li>
    <% end %>
  </ul>
  <% else %>
  <h1>Welcome!</h1>
    <%= link_to "Sign Up Here", signup_path %> |
    <%= link_to "Sign In Here", signin_path %><br>
  <br>
    <%= form_tag('/auth/github', method: 'post') do %>
    <button type='submit'>Login with GitHub</button>
  <% end %>
<% end %>

<h1>Sign In</h1>

<%= flash[:message] if flash[:message] %>

<%= form_with(scope: :user, url: signin_path, local: true) do |f| %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, required:true %><br>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, required:true %><br>
  </div>

  <div class="actions">
    <%= f.submit "Sign In" %>
  </div>

<% end %>

<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<% if current_user == @user %>
  <h1>Welcome <%= @user.username %>!</h1>

  <h2>My Info</h2>
  <p>Username: <%= @user.username %></p>
  <p>Email: <%= @user.email %></p>
  <p>Password: ********</p>
  <div class="buttons-container">
    <%= button_to "Edit", edit_user_path(@user), class: 'edit-user-btn' %>
    <%= button_to "Delete", user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete your account? This action cannot be reversed." }, class: 'delete-user-btn' %>
  </div>

<br>

  <h2>My Submissions</h2>
<% else %>
  <h2><%= @user.username %>'s Submissions</h2>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>URL</th>
      <th>Notes</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @user.submissions.each do |submission| %>
      <tr>
        <td><%= link_to submission.title, submission_path(submission) %></td>
        <td><%= link_to submission.url, submission.url %></td>
        <td><%= submission.notes %></td>
        <td>
          <% if current_user && current_user == submission.user %>
            <div class="buttons-container">
              <%= button_to "Edit", edit_submission_path(submission), method: :get, class: 'edit-btn' %>
              <%= button_to "Delete", submission_path(submission), method: :delete, data: { confirm: "Are you sure?" }, class: 'delete-btn' %>
            </div>
          <% else %>
            <% if current_user.upvoted?(submission) %>
              <%= button_to "Upvoted", submission_remove_upvote_path(submission), method: :delete, data: { confirm: "Are you sure you want to remove your upvote?" }, class: 'upvoted-btn' %>
            <% else %>
              <%= button_to "Upvote", submission_upvote_path(submission, submission_id: submission.id), method: :post, class: 'upvote-btn' %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user == @user %>
  <h2>My Collections</h2>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @user.collections.each do |collection| %>
        <tr>
          <td><%= link_to collection.name, collection_path(collection) %></td>
          <td>
            <div class="buttons-container">
              <%= button_to "Edit", edit_collection_path(collection), method: :get, class: 'edit-btn' %>
              <%= button_to "Delete", collection_path(collection), method: :delete, data: { confirm: "Are you sure you want to delete this collection?" }, class: 'delete-btn' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

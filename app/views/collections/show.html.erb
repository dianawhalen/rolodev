<h1>Collections#show</h1>
<p>Find me in app/views/collections/show.html.erb</p>

<h2><%= @collection.name %></h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>URL</th>
      <th>User</th>
      <th>Upvotes</th>
    </tr>
  </thead>
  <tbody>
    <% @collection.submissions.each do |submission| %>
      <tr>
        <td><%= link_to submission.title, submission %></td>
        <td><%= link_to submission.url, submission.url %></td>
        <td><%= link_to submission.user.username, submission.user %></td>
        <td><%= submission.upvotes.count %></td>
        <td>
          <%= button_to "Remove from Collection", remove_from_collection_collection_submission_path(collection_id: @collection, id: submission.collection_submissions.find_by(collection: @collection).id), method: :delete, data: { confirm: "Are you sure you want to remove this submission from the collection?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user && current_user == @collection.user %>
  <%= button_to "Edit", edit_collection_path(@collection), method: :get %>
  <%= button_to "Delete", collection_path(@collection), method: :delete, data: { confirm: "Are you sure you want to delete this collection?" } %>
<% end %>

<%= link_to 'Back', '#', onclick: 'window.history.back()', class: 'btn btn-secondary' %>

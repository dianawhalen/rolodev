<% if @submission.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

    <ul>
      <% @submission.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @submission, url: submissions_path, local: true) do |f| %>
  <div class="title-and-buttons">
    <h2>New Submission</h2>
    <div class="buttons-container">
      <%= f.submit "Create", class: 'button' %>
    </div>
  </div>

  <div class="submission-content">
    <div class="labels-container">
      <div class="label"><%= f.label :title %>:</div>
      <div class="label"><%= f.label :url %>:</div>
      <div class="label"><%= f.label :notes %>:</div>
    </div>
    <div class="content-container">
      <div><%= f.text_field :title, autofocus: true %></div>
      <div><%= f.text_field :url %></div>
      <div><%= f.text_area :notes %></div>
    </div>
  </div>
<% end %>

<br>

<%= link_to "Back", submissions_path, class: 'button back-btn' %>

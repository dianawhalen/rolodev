<h1>Submissions#index</h1>
<p>Find me in app/views/submissions/index.html.erb</p>

<h1>All Submissions</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>URL</th>
      <th>Notes</th>
      <th>Submitted by</th>
      <th>Total Upvotes</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @submissions.each do |submission| %>
      <tr>
        <td><%= link_to submission.title, submission_path(submission) %></td>
        <td><%= link_to submission.url, submission.url %></td>
        <td><%= submission.notes %></td>
        <td><%= link_to submission.user.username, user_path(submission.user) %></td>
        <td><%= submission.upvotes.count %></td>
        <td>
          <% if current_user && current_user == submission.user %>
            <%= button_to "Edit", edit_submission_path(submission), method: :get, class: 'edit-btn' %>
            <%= button_to "Delete", submission_path(submission), method: :delete, data: { confirm: "Are you sure?" }, class: 'delete-btn' %>
          <% end %>

          <% if current_user && current_user != submission.user %>
            <% if current_user.upvoted?(submission) %>
              <%= button_to "Upvoted", submission_remove_upvote_path(submission), method: :delete, data: { confirm: "Are you sure you want to remove your upvote?" } %>
            <% else %>
              <%= button_to "Upvote", submission_upvote_path(submission, submission_id: submission.id), method: :post %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
